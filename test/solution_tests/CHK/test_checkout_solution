from solutions.CHK.checkout_solution import CheckoutSolution


class TestHello():
    def test_specialOffers(self):
        assert CheckoutSolution("AAA") == 130
        assert CheckoutSolution("AAAA") == 180
        assert CheckoutSolution("BB") == 45
        assert CheckoutSolution("BBB") == 75

    def test_regular(self):
        assert CheckoutSolution("A") == 50
        assert CheckoutSolution("B") == 30
        assert CheckoutSolution("C") == 20
        assert CheckoutSolution("D") == 15
    
    def test_invalid(self):
        assert CheckoutSolution("E") == -1
        assert CheckoutSolution(123) == -1
    
